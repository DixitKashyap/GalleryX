<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".AlbumFragment.Album_Fragment">

    <LinearLayout
        android:id="@+id/videos_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/video_thumbnail"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@color/grey"
                        app:shapeAppearanceOverlay="@style/curved"
                        app:strokeColor="@color/dark_grey"
                        app:strokeWidth="2dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                    </com.google.android.material.imageview.ShapeableImageView>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/video_play_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.854"
                        app:layout_constraintVertical_bias="0.854"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/videos_Tag"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:id="@+id/totalVideo_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginStart="10dp"
                     >
                </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/screen_shot_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:scaleType="centerCrop"
                android:id="@+id/all_screenShots"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@color/grey"
                app:shapeAppearanceOverlay="@style/curved"
                app:strokeColor="@color/dark_grey"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            </com.google.android.material.imageview.ShapeableImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_screenshots"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
        </TextView>

        <TextView
            android:id="@+id/AllScreenShots_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/camera_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.40">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:scaleType="centerCrop"
                android:id="@+id/all_cameraImages"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@color/grey"
                app:shapeAppearanceOverlay="@style/curved"
                app:strokeColor="@color/dark_grey"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            </com.google.android.material.imageview.ShapeableImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera_images"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
        </TextView>

        <TextView
            android:id="@+id/AllCameraImages_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/galleryX_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.40">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:scaleType="centerCrop"
                android:id="@+id/all_galleryXImages"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@color/grey"
                app:shapeAppearanceOverlay="@style/curved"
                app:strokeColor="@color/dark_grey"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            </com.google.android.material.imageview.ShapeableImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gallery_X_images"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
        </TextView>

        <TextView
            android:id="@+id/all_galleryXImage_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/local_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:scaleType="centerCrop"
                android:id="@+id/all_localStorageImages"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@color/grey"
                app:shapeAppearanceOverlay="@style/curved"
                app:strokeColor="@color/dark_grey"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            </com.google.android.material.imageview.ShapeableImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/local_storage_images"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
        </TextView>

        <TextView
            android:id="@+id/localStorageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cropped_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:scaleType="centerCrop"
                android:id="@+id/all_cropped_images"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@color/grey"
                app:shapeAppearanceOverlay="@style/curved"
                app:strokeColor="@color/dark_grey"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            </com.google.android.material.imageview.ShapeableImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cropped_Images"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
        </TextView>

        <TextView
            android:id="@+id/all_cropped_images_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            >
        </TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>