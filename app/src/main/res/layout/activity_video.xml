<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotosFragment.VideoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/top_panel"
        android:gravity="center"
        android:background="@color/black"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/flash_on_icon"
            android:scaleType="centerCrop"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_margin="10sp"
            android:id="@+id/flash_button"/>

    </LinearLayout>
    <androidx.camera.view.PreviewView
        android:id="@+id/video_preview"
        android:background="@color/dark_grey"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </androidx.camera.view.PreviewView>

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/menu_icon"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="10sp"
        android:layout_alignParentRight="true"
        android:id="@+id/video_menu_button"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/record_icon"
        android:scaleType="centerCrop"
        android:scaleX="2"
        android:scaleY="2"
        android:background="@drawable/shape"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:id="@+id/record_button"/>

    <ImageButton
        android:id="@+id/Flip_Button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/video_camera_flip_icon"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="65dp"
        android:layout_alignRight="@id/record_button"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/image_view_background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="65dp"
        />

   <LinearLayout
       android:id="@+id/bottom_linearLayout"
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:background="@color/black"
       android:orientation="horizontal"
       android:layout_alignParentBottom="true"
/>

</RelativeLayout>